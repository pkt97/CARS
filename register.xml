<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/cs6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Go to home"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20dp"
            android:paddingLeft="290dp"
            android:onClick="home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Register !!!"
            android:textColor="@android:color/black"
            android:textSize="60sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textAutoComplete"
            android:paddingLeft="10dp"
            android:hint="Name"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp"
            android:id="@+id/name"
            android:onClick="nameValid"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:hint="Mobile Number"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp"
            android:id="@+id/mobile"
            android:onClick="mobileValid"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:hint="Email ID"
            android:inputType="textAutoComplete"
            android:onClick="emailValid"
            android:paddingLeft="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:hint="Username"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp"
            android:id="@+id/username"
            android:onClick="userValid"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:inputType="textWebPassword"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp"
            android:id="@+id/pass"
            android:onClick="passValid"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp"
            android:inputType="textWebPassword"
            android:paddingLeft="10dp"
            android:hint="Confirm Password"
            android:textColor="@android:color/darker_gray"
            android:textSize="25sp"
            android:id="@+id/confirmpass"
            android:onClick="confpassValid"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Register"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90dp"
                android:text="Already a User ?"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="login"
                android:paddingLeft="5dp"
                android:text="Login"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
